<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Collection</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <%- include('partials/navbar', {page: '/lego/sets'}) %>
    <br />
    <br />

    <!--Container-->

    <div class="container mx-auto">
      <!--Hero-->
      <div class="hero bg-base-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Collection</h1>
            <p class="py-6">Browse the entire collection. Click the theme to filter by themes such as:
                <a href="/lego/sets?theme=Technic" class="btn btn-primary btn-xs">Technic</a>
                <a href="/lego/sets?theme=Classic%20Town" class="btn btn-primary btn-xs">CLASSIC TOWN</a>
                <a href="/lego/sets?theme=Supplemental" class="btn btn-primary btn-xs">SUPPLEMENTAL</a>
            </p>
          </div>
        </div>
      </div>
      <!--Hero-->

      <!--ForEach-->

      <!--Table-->
      <div class="overflow-x-auto">
        <table class="table">
          <tbody>
            <!-- row 1 -->

            <% sets.forEach(set=>{ %>
            <tr>
              <td>
                <div class="flex items-center space-x-3">
                  <div class="avatar">
                    <div
                      class="w-32 h-32 rounded-lg bg-transparent bg-no-repeat bg-cover"
                    >
                      <img src="<%= set.img_url %>" />
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <%= set.name %>
                <span> | </span>
                <a
                  href="/lego/sets?theme=<%= set.Theme.name %>"
                  class="btn mt-2 btn-xs"
                  ><%= set.Theme.name %></a
                >
              </td>
              <td>
                <span class="font-bold">Year: </span>
                <span><%= set.year %></span>
                <span>-</span>
                <span class="font-bold">Parts: </span>
                <span><%= set.num_parts %></span>
              </td>
              <th>
                <button class="btn btn-xs">
                  <a href="/lego/sets/<%= set.set_num %>">details
                </button>
              </th>
            </tr>

            <% }) %>
            <!--ForEach-->
          </tbody>
        </table>
      </div>
      <!--Table-->
    </div>
    <!--Container-->
  </body>
</html>
